@functions {
    public bool IsCurrentPage(string controller, string action)
    {
        var currentController = ViewContext.RouteData.Values["Controller"] as string;
        var currentAction = ViewContext.RouteData.Values["Action"] as string;
        
        return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase) && // bu kod bool dondurecek bu sayede classlara active degeri verilecek (controller ve action eşit mi değilmi)
               string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase);
    }
}



